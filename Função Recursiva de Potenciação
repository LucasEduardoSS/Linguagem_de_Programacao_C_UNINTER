#include <stdio.h>

/* The function has two parameters that receive one
int number each, if the y parameter be lower than the
function return the value of x, else, ir returns
itself, with the second parameter minus one. *\

int potencia(int x, int y){
    if (y < 2) {
        return x;
    }
    else {
        return x * potencia(x, y - 1);
    }
};

int main() {
    int b = 3, e = 8;
    
    printf("%i", potencia(b, e));
    
    return 0;
}
